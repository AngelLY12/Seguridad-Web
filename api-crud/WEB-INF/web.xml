    </servlet>

    <servlet-mapping>
        <servlet-name>SelectController</servlet-name>
        <url-pattern>/SelectController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FindCelularController</servlet-name>
        <servlet-class>controllers.FindCelularController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FindCelularController</servlet-name>
        <url-pattern>/FindCelularController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateController</servlet-name>
        <servlet-class>controllers.UpdateController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateController</servlet-name>
        <url-pattern>/UpdateController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteController</servlet-name>
        <servlet-class>controllers.DeleteController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteController</servlet-name>
        <url-pattern>/DeleteController</url-pattern>
    </servlet-mapping>
</web-app>