<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
    <servlet>
        <servlet-name>InsertController</servlet-name>
        <servlet-class>controllers.InsertController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InsertController</servlet-name>
        <url-pattern>/InsertController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InsertUserController</servlet-name>
        <servlet-class>controllers.users.InsertUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InsertUserController</servlet-name>
        <url-pattern>/InsertUserController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SelectController</servlet-name>
